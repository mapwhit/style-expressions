{
  "$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "none",
      "arrowParentheses": "asNeeded"
    }
  },
  "json": {
    "formatter": {
      "enabled": false
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnusedFunctionParameters": "off",
        "noUnusedVariables": "off"
      },
      "complexity": {
        "noForEach": "off",
        "useArrowFunction": "off",
        "useLiteralKeys": "off"
      },
      "style": {
        "noParameterAssign": "off",
        "useDefaultParameterLast": "off",
        "useSingleVarDeclarator": "error",
        "noUnusedTemplateLiteral": "error",
        "useNodejsImportProtocol": "off",
        "useNumberNamespace": "error",
        "noUselessElse": "error",
        "useTemplate": "off"
      },
      "performance": {
        "noDelete": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noGlobalIsNan": "off",
        "noShadowRestrictedNames": "off"
      }
    }
  }
}
