{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!reference/**/*.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "none",
      "arrowParentheses": "asNeeded"
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "expand": "always"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnusedFunctionParameters": "off",
        "noUnusedVariables": "error"
      },
      "complexity": {
        "noForEach": "off"
      },
      "style": {
        "noParameterAssign": "off",
        "useDefaultParameterLast": "off",
        "useSingleVarDeclarator": "error",
        "noUnusedTemplateLiteral": "error",
        "useNodejsImportProtocol": "off",
        "useNumberNamespace": "error",
        "noUselessElse": "error"
      },
      "performance": {
        "noDelete": "off",
        "noDynamicNamespaceImportAccess": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noShadowRestrictedNames": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "test/**/*.js"
      ],
      "linter": {
        "rules": {
          "style": {
            "useNodejsImportProtocol": "error"
          }
        }
      }
    },
    {
      "includes": [
        "test/integration/**/test.json"
      ],
      "json": {
        "formatter": {
          "enabled": true,
          "expand": "auto",
          "bracketSpacing": false,
          "lineWidth": 80
        }
      }
    }
  ]
}
